package com.company;

public class Main {

    public static void main(String[] args) {
        String begin = "Аргентина манит негра!";
        String work = begin.replaceAll(" !/.,;:'-", "");
        String best = work.toLowerCase();
        StringBuffer palindrom = new StringBuffer(best);
        StringBuffer ending = palindrom.reverse();
        if (palindrom.equals(ending)){
            System.out.println("Данная строка - палиндром, поздравляю!");
        } else {
            System.out.println("Извините, но данная строка палиндромом не являестя!");
        }

    }
}
